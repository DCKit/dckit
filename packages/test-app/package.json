{
  "name": "test-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@dckit/store": "*",
    "@dckit/ui": "*",
    "@reduxjs/toolkit": "^1.2.1",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.6",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/redux-logger": "^3.0.7",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "ts-jest": "^24.3.0",
    "typescript": "3.7.4"
  },
  "scripts": {
    "dev": "pm2 --name test-app start react-scripts -- start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "CI=true react-scripts test --color",
    "test:coverage": "CI=true react-scripts test --color --coverage",
    "prepare": "npm run test:coverage && npm run build",
    "format": "prettier --write 'src/**/*.ts*'",
    "format:check": "prettier -l 'src/**/*.ts*'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-regenerator",
        {
          "asyncGenerators": false,
          "generators": false,
          "async": false
        }
      ]
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  }
}
