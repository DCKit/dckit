{
  "name": "test-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "SKIP_PREFLIGHT_CHECK=true pm2 --name test-app start react-scripts -- start",
    "start": "SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "build": "SKIP_PREFLIGHT_CHECK=true react-app-rewired build --scripts-version @react-workspaces/react-scripts",
    "analyze": "ANALYZE=1 react-app-rewired build --scripts-version @react-workspaces/react-scripts",
    "test": "CI=true react-scripts test --color",
    "test:coverage": "CI=true react-scripts test --color --coverage",
    "prepare": "yarn test:coverage && yarn build",
    "lint": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.ts*'",
    "format:check": "prettier -l 'src/**/*.ts*'",
    "update": "ncu -u"
  },
  "dependencies": {
    "@react-workspaces/react-scripts": "3.3.0-alpha-08",
    "react-app-rewired": "2.1.5",
    "customize-cra": "^0.9.1",
    "webpack-bundle-analyzer": "^3.6.1",
    "@dckit/forms": "*",
    "@dckit/store": "*",
    "@dckit/ui": "*",
    "comp": "*",
    "@reduxjs/toolkit": "^1.2.5",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/redux-logger": "^3.0.7",
    "@types/yup": "^0.26.32",
    "formik": "^2.1.4",
    "prettier": "1.19.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-table": "7.0.0-rc.16",
    "react-scripts": "3.4.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "typescript": "3.8.3",
    "yup": "0.28.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">2%",
      "not dead",
      "not ie > 0",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/index.{ts,tsx}",
      "!<rootDir>/src/**/*.(spec|test|stories).{ts,tsx}",
      "!<rootDir>/src/__tests__/*",
      "!<rootDir>/src/serviceWorker.ts",
      "!<rootDir>/src/**/*.d.{ts,tsx}"
    ]
  }
}
