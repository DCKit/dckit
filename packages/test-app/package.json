{
  "name": "test-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pm2 --name test-app start react-scripts -- start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "CI=true react-scripts test --color",
    "test:coverage": "CI=true react-scripts test --color --coverage",
    "prepare": "yarn test:coverage && yarn build",
    "lint": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.ts*'",
    "format:check": "prettier -l 'src/**/*.ts*'",
    "update": "ncu -u"
  },
  "dependencies": {
    "@dckit/forms": "*",
    "@dckit/store": "*",
    "@dckit/ui": "*",
    "@reduxjs/toolkit": "^1.2.5",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.7",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/redux-logger": "^3.0.7",
    "@types/yup": "^0.26.32",
    "formik": "^2.1.4",
    "prettier": "1.19.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "ts-jest": "^25.2.1",
    "typescript": "3.8.3",
    "yup": "0.28.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-regenerator",
        {
          "asyncGenerators": false,
          "generators": false,
          "async": false
        }
      ]
    ]
  },
  "browserslist": {
    "production": [
      ">2%",
      "not dead",
      "not ie > 0",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  }
}
