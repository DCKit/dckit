{
  "name": "@dckit/store",
  "version": "0.1.0",
  "description": "Redux-based framework to get rid of CRUD-related boilerplate",
  "author": "Eugene Samonenko <esamonenko@agilevision.io>",
  "license": "MIT",
  "repository": "https://github.com/DCKit/dckit",
  "keywords": [
    "typescript",
    "redux",
    "tsdx",
    "redux-saga",
    "immer",
    "crud",
    "toolkit",
    "ducks-pattern",
    "dck",
    "react-redux",
    "react-hooks-redux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/dckit-store.esm.js",
  "module": "dist/dckit-store.esm.js",
  "types": "dist/typings.d.ts",
  "typings": "dist/typings.d.ts",
  "scripts": {
    "prebuild": "npm run lint && npm run format:check && npm run test:coverage",
    "build": "tsdx build --format esm --name dckit-store",
    "postbuild": "npm run apiex",
    "start": "tsdx watch --format esm --name dckit-store",
    "dev": "pm2 --name @dckit/store start tsdx -- watch --transpileOnly --format esm --name dckit-store",
    "format": "prettier --write \"src/*.ts\" \"src/**/*.ts\" \"*.md\"",
    "format:check": "prettier --list-different \"src/*.ts\" \"src/**/*.ts\" \"*.md\"",
    "lint": "tsdx lint src && tsc --noEmit",
    "test": "CI=true tsdx test --color",
    "test:coverage": "CI=true tsdx test --color --coverage",
    "apiex": "api-extractor run",
    "apiex:local": "api-extractor run --local --verbose",
    "docs": "typedoc --exclude '**/*+(index|.test).ts' --theme ../../../docs/.theme --out ../../../docs/dckit-store src"
  },
  "devDependencies": {
    "@ambroseus/tsdx": "^0.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "@types/react-redux": "^7.1.5",
    "@types/redux-saga-tester": "1.0.1",
    "@testing-library/react": "^9.3.3",
    "@microsoft/api-extractor": "^7.7.0",
    "eslint-config-react-app": "5.1.0",
    "jest": "^24.9.0",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "redux-saga-tester": "^1.0.629",
    "tslib": "^1.10.0",
    "typedoc": "^0.15.4",
    "typescript": "3.7.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.1.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^1.1.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false
}
