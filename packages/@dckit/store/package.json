{
  "name": "@dckit/store",
  "version": "0.1.0",
  "description": "Redux-based framework to get rid of CRUD-related boilerplate",
  "author": "Eugene Samonenko <esamonenko@agilevision.io>",
  "license": "MIT",
  "repository": "https://github.com/DCKit/dckit",
  "keywords": [
    "typescript",
    "redux",
    "tsdx",
    "redux-saga",
    "immer",
    "crud",
    "toolkit",
    "ducks-pattern",
    "dck",
    "react-redux",
    "react-hooks-redux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/dckit-store.esm.js",
  "module": "dist/dckit-store.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsdx build --transpileOnly --format esm --name dckit-store",
    "start": "pm2 --name @dckit/store start tsdx -- watch --transpileOnly --format esm --name dckit-store",
    "dev": "pm2 --name @dckit/store start tsdx -- watch --transpileOnly --format esm --name dckit-store --onFirstSuccess 'npm run dev:next'",
    "dev:next": "cd ../auth && npm run dev",
    "lint": "tsdx lint src && tsc --noEmit",
    "test": "CI=true tsdx test --color",
    "test:coverage": "CI=true tsdx test --color --coverage",
    "prepare": "npm run test:coverage && npm run build",
    "apiex": "api-extractor run",
    "apiex:local": "api-extractor run --local --verbose",
    "docs": "typedoc --exclude '**/*+(index|.test).ts' --theme ../../../docs/.theme --out ../../../docs/dckit-store src",
    "format": "prettier --write 'src/**/*.ts*'",
    "format:check": "prettier -l 'src/**/*.ts*'"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.6",
    "@types/react-redux": "^7.1.5",
    "@types/redux-saga-tester": "1.0.1",
    "@testing-library/react": "^9.4.0",
    "@microsoft/api-extractor": "^7.7.3",
    "eslint-config-react-app": "5.1.0",
    "jest": "^24.9.0",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "redux-saga-tester": "^1.0.657",
    "tsdx": "^0.12.3",
    "tslib": "^1.10.0",
    "typedoc": "^0.16.2",
    "typescript": "3.7.4"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.2.1",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^1.2.1",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false
}
