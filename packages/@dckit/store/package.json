{
  "name": "@dckit/store",
  "version": "0.1.0",
  "description": "Redux-based framework to get rid of CRUD-related boilerplate",
  "author": "Eugene Samonenko <esamonenko@agilevision.io>",
  "license": "MIT",
  "repository": "https://github.com/DCKit/dckit",
  "keywords": [
    "typescript",
    "redux",
    "tsdx",
    "redux-saga",
    "immer",
    "crud",
    "toolkit",
    "ducks-pattern",
    "dck",
    "react-redux",
    "react-hooks-redux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/store.esm.js",
  "module": "dist/store.esm.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsdx build --format esm",
    "start": "pm2 --name @dckit/store start tsdx -- watch --format esm",
    "dev": "pm2 --name @dckit/store start tsdx -- watch --format esm --onFirstSuccess 'yarn dev:next'",
    "dev:next": "cd ../auth && yarn dev",
    "lint": "tsdx lint src && tsc --noEmit",
    "test": "CI=true tsdx test --color",
    "test:coverage": "CI=true tsdx test --color --coverage",
    "prepare": "yarn test:coverage && yarn build",
    "docs": "typedoc --exclude '**/*+(index|.test).ts' --theme ../../../docs/.theme --out ../../../docs/dckit-store src",
    "format": "prettier --write 'src/**/*.ts*'",
    "format:check": "prettier -l 'src/**/*.ts*'",
    "update": "ncu -u"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/react-redux": "^7.1.7",
    "@types/redux-saga-tester": "1.0.1",
    "@testing-library/react": "^9.5.0",
    "eslint-config-react-app": "5.2.0",
    "eslint-config-unobtrusive": "^1.2.5",
    "eslint-plugin-react": "^7.19.0",
    "prettier": "1.19.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "redux-saga-tester": "^1.0.708",
    "tsdx": "^0.12.3",
    "tslib": "^1.11.1",
    "typedoc": "^0.16.11",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.2.5",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^1.2.5",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3"
  },
  "browserslist": {
    "production": [
      ">2%",
      "not dead",
      "not ie > 0",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false
}
