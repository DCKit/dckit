{
  "name": "@dckit/auth",
  "version": "0.1.0",
  "description": "Authentication helpers for DCKit",
  "repository": "https://github.com/ambroseus/dckit",
  "keywords": [
    "typescript",
    "redux",
    "tsdx",
    "redux-saga",
    "immer",
    "crud",
    "toolkit",
    "ducks-pattern",
    "dck",
    "react-redux",
    "react-hooks-redux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/dckit-auth.esm.js",
  "module": "dist/dckit-auth.esm.js",
  "types": "dist/index.d.ts",
  "author": "Eugene Samonenko <esamonenko@agilevision.io>",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "@types/react-redux": "^7.1.5",
    "@testing-library/react": "^9.3.3",
    "eslint-config-react-app": "5.1.0",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "@ambroseus/tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "3.7.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.1.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^1.1.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4"
  },
  "scripts": {
    "build": "tsdx build --format esm --name dckit-auth",
    "start": "tsdx watch --format esm --name dckit-auth",
    "dev": "pm2 --name @dckit/auth start tsdx -- watch --format esm --name dckit-auth",
    "format": "prettier --write \"src/*.ts\" \"src/**/*.ts\" \"**/*.md\"",
    "format:check": "prettier --list-different \"src/*.ts\" \"src/**/*.ts\" \"**/*.md\"",
    "lint": "tsdx lint src && tsc --noEmit",
    "prebuild": "npm run lint && npm run format:check && npm run test:coverage",
    "test": "CI=true tsdx test --color",
    "test:coverage": "CI=true tsdx test --color --coverage"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            6133
          ]
        }
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  }
}
