{
  "name": "@dckit/auth",
  "version": "0.1.0",
  "description": "Authentication helpers for DCKit",
  "repository": "https://github.com/ambroseus/dckit",
  "keywords": [
    "typescript",
    "redux",
    "tsdx",
    "redux-saga",
    "immer",
    "crud",
    "toolkit",
    "ducks-pattern",
    "dck",
    "react-redux",
    "react-hooks-redux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/auth.esm.js",
  "types": "dist/index.d.ts",
  "author": "Eugene Samonenko <esamonenko@agilevision.io>",
  "license": "MIT",
  "scripts": {
    "build": "tsdx build --transpileOnly",
    "start": "pm2 --name @dckit/auth start tsdx -- watch --transpileOnly",
    "dev": "pm2 --name @dckit/auth start tsdx -- watch --transpileOnly --onFirstSuccess 'npm run dev:next'",
    "dev:next": "cd ../ui && npm run dev",
    "lint": "tsdx lint src && tsc --noEmit",
    "prepare": "npm run test:coverage && npm run build",
    "test": "CI=true tsdx test --color",
    "test:coverage": "CI=true tsdx test --color --coverage",
    "format": "prettier --write 'src/**/*.ts*'",
    "format:check": "prettier -l 'src/**/*.ts*'"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "@types/react-redux": "^7.1.6",
    "@testing-library/react": "^9.4.0",
    "eslint-config-react-app": "5.1.0",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "tsdx": "^0.12.3",
    "tslib": "^1.10.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.2.3",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^1.2.3",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false
}
