{
  "name": "@dckit/auth",
  "version": "0.1.0",
  "description": "Authentication helpers for DCKit",
  "repository": "https://github.com/ambroseus/dckit",
  "keywords": [
    "typescript",
    "redux",
    "tsdx",
    "redux-saga",
    "immer",
    "crud",
    "toolkit",
    "ducks-pattern",
    "dck",
    "react-redux",
    "react-hooks-redux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/auth.esm.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "author": "Eugene Samonenko <esamonenko@agilevision.io>",
  "license": "MIT",
  "scripts": {
    "build": "tsdx build",
    "start": "pm2 --name @dckit/auth start tsdx -- watch",
    "dev": "pm2 --name @dckit/auth start tsdx -- watch --onFirstSuccess 'yarn dev:next'",
    "dev:next": "cd ../ui && yarn dev",
    "lint": "tsdx lint src && tsc --noEmit",
    "prepare": "yarn test:coverage && yarn build",
    "test": "CI=true tsdx test --color",
    "test:coverage": "CI=true tsdx test --color --coverage",
    "format": "prettier --write 'src/**/*.ts*'",
    "format:check": "prettier -l 'src/**/*.ts*'",
    "update": "ncu -u"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/react-redux": "^7.1.7",
    "@testing-library/react": "^9.5.0",
    "eslint-config-react-app": "5.2.0",
    "prettier": "1.19.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "tsdx": "^0.12.3",
    "tslib": "^1.11.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.2.5",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^1.2.5",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "browserslist": {
    "production": [
      ">2%",
      "not dead",
      "not ie > 0",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/index.{ts,tsx}",
      "!<rootDir>/src/**/*.(spec|test|stories).{ts,tsx}",
      "!<rootDir>/src/__tests__/*",
      "!<rootDir>/src/**/*.d.{ts,tsx}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false
}
